{
  "name": "ecs-engine",
  "version": "1.0.0",
  "description": "High-performance Entity-Component-System engine in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/index.ts",
    "dev:server": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/server/server.ts",
    "dev:watch": "concurrently \"tsc --watch\" \"nodemon --watch dist --exec node dist/index.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "example": "node dist/examples/basic.js",
    "start": "node server.js",
    "server": "node dist/server/server.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "game-engine",
    "typescript",
    "performance"
  ],
  "author": "ECS Engine",
  "license": "MIT"
}
